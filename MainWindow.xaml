<Window x:Class="tcp_auto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tcp_auto"
        mc:Ignorable="d"
        Title="TCP-ASSIST" 
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    <!-- Width="800" SelectedItem="{Binding SelectedItem, Mode=TwoWay}"  ItemsSource="{Binding DataList}"-->
    <Window.Resources>
        <TextBlock x:Key="serverStr" Text="开启SERVER"></TextBlock>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" >
            <StackPanel>
                <TextBlock Text="协议类型——TCP SERVER"/>
                <!--<Border Margin="0 5 0 0" Background="Transparent" CornerRadius="3" >
                    <ComboBox                
                    IsDropDownOpen="False"
                    Name="协议类型com"                    
                    Height="25"
                    IsReadOnly="True"
                    SelectedIndex="0" >
                    </ComboBox>
                </Border>-->
                

                <TextBlock Text="IP地址" Margin="0 5 0 0"/>

                <Border Margin="0 5 0 0" BorderBrush="Gray" BorderThickness="0.5" CornerRadius="3" Padding="2">
                    <TextBox                         
                        x:Name="IpAddress"
                        BorderThickness="0" Background="Transparent"                        
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Center"
                         Height="25"  />
                </Border>
          
                

                <TextBlock Text="端口号" Margin="0 5 0 0"/>
                <Border Margin="0 5 0 0" BorderBrush="Gray" BorderThickness="0.5" CornerRadius="3" Padding="2">
                    <!--Text="8080"-->
                    <TextBox                        
                        x:Name="PortNum"
                        BorderThickness="0" 
                        Background="Transparent"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Center"
                         Height="25"
                         />
                </Border>



                <Button 
                    x:Name="linkButton"
                    Margin="0 40 0 0"  
                    Height="30"
                    Click="LinkCommand"
                    Background="#FBC12D"  >
                    <Button.Template >
                        <ControlTemplate  >
                            <Border BorderBrush="Transparent"  BorderThickness="0" CornerRadius="2" Background="{TemplateBinding Background}" >
                                <ContentPresenter Content="{DynamicResource serverStr}"  HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>



                <!--<Button Height="30" Margin="0 40 0 0"  x:Name="linkButton" BorderBrush="{x:Null}" BorderThickness="0" Content="开启SERVER" >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FBC12D"/>
