                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="ClickMode"  Value="Hover">
                                               
                                                <Setter Property="Content" Value="关闭SERVER"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>-->





            </StackPanel>
        </Grid>

        <!--现在方便看 以后删除-->
        <Grid Grid.Column="1" Margin="40 0 0 0">
            <StackPanel>
                <TextBlock Text="数据接收区"/>

                <Border Margin="0 5 0 0" BorderBrush="Gray" BorderThickness="0.5" CornerRadius="3" Padding="2">
                    <!--Width="150"-->
                    <TextBox 
                        x:Name="DataGet"                       
                        BorderThickness="0" 
                        Background="Transparent"
                        
                                              
                        Height="50" />
                </Border>

                <TextBlock 
                    Text="数据发送区"
                    Margin="0 40 0 0" />

                <Border Margin="0 5 0 0" BorderBrush="Gray" BorderThickness="0.5" CornerRadius="3" Padding="2">
                    <!--VerticalAlignment="Center"-->
                    <TextBox 
                        x:Name="DataSend"
                        BorderThickness="0" 
                        Background="Transparent" 
                               
                        Height="50" />
                </Border>

                <!--<Button 
                    Margin="0 5 0 0"  
                    Height="30"
                    Click="Send_Data">
                    <Button.Template >
                        <ControlTemplate  >
                            <Border BorderBrush="Gray"  BorderThickness="0" CornerRadius="2">
                                <Border.Background>#FBC12D</Border.Background>
                                <ContentPresenter Content="发送数据" HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>-->
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2" Margin="40 0">
            <StackPanel>
                <TextBlock Text="数据键值对定义"/>

                <WrapPanel Margin="0 5 0 0" VerticalAlignment="Top">
                    <TextBlock Text="键" />
                    <Border Margin="5 0 0 0" VerticalAlignment="Top" Width="50" CornerRadius="1" BorderBrush="Gray" BorderThickness="0.5"  Padding="2">
                        <TextBox                            
                            x:Name="Key"
                            BorderThickness="0" 
                            Background="Transparent"                        
                            VerticalContentAlignment="Center"
                            VerticalAlignment="Center"  
                            Text="{Binding KeyMess}"/>
                    </Border>

                    <TextBlock Text="值" Margin="5 0 0 0"/>
                    <Border Margin="5 0 0 0" VerticalAlignment="Top" Width="50" CornerRadius="1" BorderBrush="Gray" BorderThickness="0.5"  Padding="2">
                        <TextBox                         
                            x:Name="Value"
                            BorderThickness="0" 
                            Background="Transparent"                        
                            VerticalContentAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{Binding ValueMess}"/>
                    </Border>
                </WrapPanel>


                <!--<DataGrid Margin="0 5 0 0" 
                          Height="200"
                            x:Name="KeyAndValue"
                                                 
                            AutoGenerateColumns="False"
                            Background="White"
                            BorderThickness="0"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            FontSize="12"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="All"                          
                            RowHeight="24"
                          
                            SelectedIndex="{Binding SelectedIndex}"
                            SelectedItem="{Binding SelectedItem}"
                            ItemsSource="{Binding DataDridKVs}"  >-->



                    <DataGrid Margin="0 5 0 0" 
                          Height="200"
                            x:Name="KeyAndValue"
                              
                              RowHeaderWidth="0"
                                                 
                            AutoGenerateColumns="False"
                            Background="White"
                            BorderThickness="0"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            FontSize="12"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="All"                          
                            RowHeight="24"
                          
                            SelectedIndex="{Binding SelectedIndex}"
                            SelectedItem="{Binding SelectedItem}"
                            ItemsSource="{Binding DataDridKVs}"  >
                    <DataGrid.Columns>
                        <DataGridTextColumn
                                    Width="100"    
                                    Header="输入格式" 
                            Binding="{Binding DataKey}"/>
                        <DataGridTextColumn
                                    Width="100"                                   
                                    Header="匹配格式" 
                            Binding="{Binding DataValue}"/>
                    </DataGrid.Columns>
                </DataGrid>


                <StackPanel Margin="0 5 0 0">
                    <WrapPanel >
                        <Button                   
                        Width="60"
                        Height="25"
                        Command="{Binding AddCommand}">
                            <Button.Template >
                                <ControlTemplate  >
                                    <Border BorderBrush="Gray"  BorderThickness="0" CornerRadius="2">
                                        <Border.Background>#FBC12D</Border.Background>
                                        <ContentPresenter Content="增匹配" HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button  Margin="20 0 0 0" 
                        Width="60"                     
                        Height="25"
                        Command="{Binding DeleteCommand}">
                            <Button.Template>
                                <ControlTemplate  >
                                    <Border BorderBrush="Gray"  BorderThickness="0" CornerRadius="2">
                                        <Border.Background>#FBC12D</Border.Background>
                                        <ContentPresenter Content="删匹配" HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </WrapPanel>
                    <!--<WrapPanel Margin="0 20 0 0">
                        <Button                   
                        Width="60"
                        Height="25"
                        Command="{Binding ExportCommand}">
                            <Button.Template >
                                <ControlTemplate  >
                                    <Border BorderBrush="Gray"  BorderThickness="0" CornerRadius="2">
                                        <Border.Background>#FBC12D</Border.Background>
                                        <ContentPresenter Content="导出" HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                                    </Border>
                                </ControlTemplate>
